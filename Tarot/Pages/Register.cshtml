@page
@model Tarot.Pages.RegisterModel

@if (TempData.ContainsKey("Message"))
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}

<div class="row my-3">
    <img src="~/images/logo.png" style="max-width:10%" class="text-center mx-auto" />
</div>
<div class="row mx-auto">
    <p class="text-center" style="color:#F4DE11"><i>Đăng Ký Tài Khoản</i></p>
</div>
<div class="row">
    <div class="col-7 offset-3 form-container" style="width:70%">
        <form class="text-center" method="post">
            <div class="form-group d-flex align-items-center my-2">
                <label class="custom-label">Họ và tên <span style="color: #F10A0A">(*)</span></label>
                <div>
                    <input asp-for="UserInput.Fullname" type="text" class="form-control mx-auto custom-input" placeholder="Họ và tên" />
                    <div class="text-start">
                        <span asp-validation-for="UserInput.Fullname" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group align-items-center my-2">
                <label class="custom-label">Ngày tháng năm sinh <span style="color: #F10A0A">(*)</span></label>
                <div>
                    <input asp-for="UserInput.Birthday" type="date" class="form-control mx-auto custom-input" />
                    <div class="text-start">
                        <span asp-validation-for="UserInput.Birthday" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group d-flex align-items-center my-2">
                <label class="custom-label">Giới tính <span style="color: #F10A0A">(*)</span></label>
                <div>
                    <div class="custom-input">
                        <div class="form-check form-check-inline">
                            <input type="radio" id="male" name="UserInput.Gender" class="form-check-input" value="male" checked>
                            <label asp-for="UserInput.Gender" for="male" class="form-check-label" style="margin-right: 10px;">Nam</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input asp-for="UserInput.Gender" type="radio" id="female" name="UserInput.Gender" class="form-check-input" value="female">
                            <label for="female" class="form-check-label" style="margin-right: 10px;">Nữ</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input asp-for="UserInput.Gender" type="radio" id="other" name="UserInput.Gender" class="form-check-input" value="other">
                            <label for="other" class="form-check-label" style="margin-right: 10px;">Khác</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group d-flex align-items-center my-2">
                <label class="custom-label">Username <span style="color: #F10A0A">(*)</span></label>
                <div>
                    <input asp-for="UserInput.Username" type="text" class="form-control mx-auto custom-input" placeholder="Username" />
                    <div class="text-start">
                        <span asp-validation-for="UserInput.Username" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group d-flex align-items-center my-2">
                <label class="custom-label">Password <span style="color: #F10A0A">(*)</span></label>
                <div>
                    <input asp-for="UserInput.Password" type="password" class="form-control mx-auto custom-input" placeholder="Password" />
                    <div class="text-start">
                        <span asp-validation-for="UserInput.Password" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group d-flex align-items-center my-2">
                <label class="custom-label">Verify Password <span style="color: #F10A0A">(*)</span></label>
                <div>
                    <input asp-for="UserInput.ConfirmPassword" type="password" class="form-control mx-auto custom-input" placeholder="Verify Password" />
                    <div class="text-start">
                        <span asp-validation-for="UserInput.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group d-flex align-items-center my-2">
                <label class="custom-label">Email <span style="color: #F10A0A">(*)</span></label>
                <div>
                    <input asp-for="UserInput.Email" type="email" class="form-control mx-auto custom-input" placeholder="Email" />
                    <div class="text-start">
                        <span asp-validation-for="UserInput.Email" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group d-flex align-items-center my-2">
                <label class="custom-label">Số điện thoại <span style="color: #F10A0A">(*)</span></label>
                <div>
                    <input asp-for="UserInput.Phone" type="tel" class="form-control mx-auto custom-input" placeholder="Số điện thoại" />
                    <div class="text-start">
                        <span asp-validation-for="UserInput.Phone" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mx-auto">
                <button class="btn btn-lg btn-custom my-3 mx-auto">Đăng Ký</button>
                <div class="d-fex text-decoration-underline align-content-between">
                    <a href="#" style="margin-right: 100px!important;color:#fcb831">Đăng Nhập</a>
                    <a href="#" style="color:#fcb831">Quên mật khẩu?</a>
                </div>
            </div>

        </form>
    </div>
</div>



<style>
    .btn-custom {
        font-size: 20px;
        font-weight: bold;
        color: #fcb831 !important;
        background-color: #8e05c2 !important;
        width: 30%;
        border-radius: 30px;
    }

    .form-group {
        display: flex;
        align-items: center; /* Vertically aligns items in the center */
        justify-content: start; /* Aligns items to the start of the container */
        margin-bottom: 20px; /* Space between each form group */
    }

    .custom-label {
        background-color: #3E065F;
        color: #f4de11;
        padding: 10px 15px;
        border-radius: 10px;
        width: 200px;
        text-align: center;
        margin-right: 50px; /* Space between label and input */
    }

    .form-container .form-group .custom-input {
        color: #f4de11;
        background-color: #3E065F;
        width: 500px !important;
        padding: 5px 10px !important;
        border-radius: 5px !important;
        flex-grow: 1 !important;
    }

    .text-danger {
        font-size: 15px;
        color: #f7665e !important;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

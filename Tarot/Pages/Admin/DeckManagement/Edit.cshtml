@page
@model Tarot.Pages.Admin.DeckManagement.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="custom-title">Edit</h1>

<div class="row">
    <div class="col-md-4 offset-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Deck.DeckId" />
            <div class="form-group">
                <label asp-for="Deck.Type" class="control-label custom-label"></label>
                <input asp-for="Deck.Type" class="form-control custom-input" />
                <span asp-validation-for="Deck.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deck.ImageUrl" class="control-label custom-label"></label>
                <input asp-for="Deck.ImageUrl" class="form-control custom-input" />
                <span asp-validation-for="Deck.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group text-center my-4">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text">
    <a asp-page="Index" class="btn btn-sm btn-outline-info">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .custom-title {
        color: #f4de11 !important;
        text-align: center;
    }

    .custom-label {
        color: #f4de11;
        padding: 10px 15px;
        border-radius: 10px;
        margin-right: 50px; /* Space between label and input */
    }

    .custom-input {
        color: #f4de11 !important;
        background-color: #3E065F !important;
        width: 500px !important;
        padding: 5px 10px !important;
        border-radius: 5px !important;
        flex-grow: 1 !important;
    }

    .text-danger {
        font-size: 15px;
        color: #f7665e !important;
    }
</style>
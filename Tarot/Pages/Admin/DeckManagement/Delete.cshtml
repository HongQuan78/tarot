@page
@model Tarot.Pages.Admin.DeckManagement.DeleteModel

@{
    ViewData["Title"] = "Delete";
}



<div class="custom-user-details">
    <h3 class="custom-subtitle" style="color:red">Are you sure you want to delete this?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 custom-label">
            @Html.DisplayNameFor(model => model.Deck.Type)
        </dt>
        <dd class="col-sm-10 custom-label">
            @Html.DisplayFor(model => model.Deck.Type)
        </dd>
        <dt class="col-sm-2 custom-label">
            @Html.DisplayNameFor(model => model.Deck.ImageUrl)
        </dt>
        <dd class="col-sm-10 custom-label">
            @Html.DisplayFor(model => model.Deck.ImageUrl)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Deck.DeckId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>

<style>
    .custom-title {
        font-size: 24px;
        color: #FCB831;
        margin-top: 20px;
    }

    .custom-subtitle {
        font-size: 18px;
        margin-top: 20px;
    }

    .custom-hr {
        background-color: #FCB831;
        height: 2px;
    }

    .custom-user-details {
        background-color: #3E065F;
        padding: 20px;
        border-radius: 10px;
    }

    .custom-label {
        font-weight: bold;
        color: #f4de11;
    }

    .custom-value {
        color: #FFFFFF;
    }

    .custom-button {
        background-color: #FCB831;
        color: #fff;
    }

    .custom-link {
        color: #FCB831;
        text-decoration: none;
        margin-right: 10px;
    }
</style>
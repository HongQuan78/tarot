@page
@model Tarot.Pages.Admin.MeaningManagement.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="custom-details mx-auto" style="max-width:90%">
<h3 class="custom-subtitle" style="color:red">Are you sure you want to delete this?</h3>
    <dl class="row">
        <dt class="col-sm-2 custom-label">
            @Html.DisplayNameFor(model => model.Meaning.Meaning1)
        </dt>
        <dd class="col-sm-10 custom-label">
            @Html.DisplayFor(model => model.Meaning.Meaning1)
        </dd>
        <dt class="col-sm-2 custom-label">
            @Html.DisplayNameFor(model => model.Meaning.Type)
        </dt>
        <dd class="col-sm-10 custom-label">
            @Html.DisplayFor(model => model.Meaning.Type)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Meaning.MeaningId" />
        <input type="submit" value="Delete" class="btn btn-danger custom-button" /> |
        <a asp-page="./Index" class="custom-link">Back to List</a>
    </form>
</div>

<style>
    .custom-title {
        font-size: 24px;
        color: #FCB831;
        margin-top: 20px;
    }

    .custom-subtitle {
        font-size: 18px;
        margin-top: 20px;
    }

    .custom-hr {
        background-color: #FCB831;
        height: 2px;
    }

    .custom-details {
        background-color: #3E065F;
        padding: 20px;
        border-radius: 10px;
    }

    .custom-label {
        font-weight: bold;
        color: #f4de11;
    }

    .custom-value {
        color: #FFFFFF;
    }

    .custom-button {
        background-color: #FCB831;
        color: #fff;
    }

    .custom-link {
        color: #FCB831;
        text-decoration: none;
        margin-right: 10px;
    }
</style>

@page
@model Tarot.Pages.Admin.MeaningManagement.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h4 class="custom-title">Chỉnh sửa</h4>
<div class="row">
    <div class="col-md-4 offset-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Meaning.MeaningId" />
            <div class="form-group">
                <label asp-for="Meaning.Meaning1" class="control-label">Ý nghĩa</label>
                <textarea asp-for="Meaning.Meaning1" class="form-control custom-input" rows="4" cols="60"></textarea>
                <span asp-validation-for="Meaning.Meaning1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Meaning.Type" class="control-label custom-label">Loại</label>
                <select asp-for="Meaning.Type" asp-items="Model.TypeList" class="custom-input"></select>
                <span asp-validation-for="Meaning.Type" class="text-danger custom-validation"></span>
            </div>

            <div class="form-group text-center my-4">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text">
    <a asp-page="Index" class="btn btn-sm btn-outline-info">Back to List</a>
</div>
<style>
    .custom-title {
        color: #f4de11 !important;
        text-align: center;
    }

    .custom-label {
        color: #f4de11;
        padding: 10px 15px;
        border-radius: 10px;
        margin-right: 50px; /* Space between label and input */
    }

    .custom-input {
        color: #f4de11 !important;
        background-color: #3E065F !important;
        width: 500px !important;
        padding: 5px 10px !important;
        border-radius: 5px !important;
        flex-grow: 1 !important;
    }

    .text-danger {
        font-size: 15px;
        color: #f7665e !important;
    }
</style>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

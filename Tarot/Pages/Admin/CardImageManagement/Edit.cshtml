@page
@model Tarot.Pages.Admin.CardImageManagement.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="custom-title">Edit</h1>

<h4 class="custom-title">Card Image</h4>
<hr class="custom-hr" />
<div class="row">
    <div class="col-md-4 offset-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger custom-validation-summary"></div>
            <input type="hidden" asp-for="CardImage.ImageId" />
            <div class="form-group">
                <label class="control-label custom-label">Card Name</label>
                <select asp-for="CardImage.CardId" class="custom-input" asp-items="ViewBag.CardId"></select>
                <span asp-validation-for="CardImage.CardId" class="text-danger custom-validation"></span>
            </div>
            <div class="form-group">
                <label class="control-label custom-label">Deck Name</label>
                <select asp-for="CardImage.DeckId" class="custom-input" asp-items="ViewBag.DeckId"></select>
                <span asp-validation-for="CardImage.DeckId" class="text-danger custom-validation"></span>
            </div>
            <div class="form-group">
                <label class="control-label custom-label">Image Url</label>
                <input asp-for="CardImage.ImageUrl" class="custom-input" />
                <span asp-validation-for="CardImage.ImageUrl" class="text-danger custom-validation"></span>
            </div>
            <div class="form-group text-center my-4">
                <input style="background-color: #3E065F;" type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center my-4">
    <a style="background-color: #3E065F;" asp-page="./Index" class="btn btn-sm btn-outline-info">Back to List</a>
</div>

<style>
    .custom-title {
        color: #f4de11 !important;
        text-align: center;
    }

    .custom-label {
        color: #f4de11;
        padding: 10px 15px;
        border-radius: 10px;
        margin-right: 50px; /* Space between label and input */
    }

    .custom-input {
        color: #f4de11 !important;
        background-color: #3E065F !important;
        width: 500px !important;
        padding: 5px 10px !important;
        border-radius: 5px !important;
        flex-grow: 1 !important;
    }

    .text-danger {
        font-size: 15px;
        color: #f7665e !important;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

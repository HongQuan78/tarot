@page
@model Tarot.Pages.Admin.CardImageManagement.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center my-3" style="color:#FCB831;">Create</h1>

<h4 class="text-center my-3" style="color:#FCB831;">CardImage</h4>
<hr />
<div class="row">
    <div class="col-md-4 offset-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label custom-label">Card Name</label>
                <select asp-for="CardImage.CardId" class="custom-input" asp-items="ViewBag.CardId"></select>
                <span asp-validation-for="CardImage.CardId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label custom-label">Deck Name</label>
                <select asp-for="CardImage.DeckId" class="custom-input" asp-items="ViewBag.DeckId"></select>
                <span asp-validation-for="CardImage.DeckId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label custom-label">Image Url</label>
                <input asp-for="CardImage.ImageUrl" class="custom-input" />
                <span asp-validation-for="CardImage.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group text-center my-4">
                <input style="background-color: #3E065F;" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center my-4">
    <a asp-page="Index" style="background-color: #3E065F;" class="btn btn-sm btn-outline-info">Back to List</a>
</div>

<style>
    .custom-label {
        color: #f4de11;
        padding: 10px 15px;
        border-radius: 10px;
        margin-right: 50px; /* Space between label and input */
    }

    .custom-input {
        color: #f4de11 !important;
        background-color: #3E065F;
        width: 500px !important;
        padding: 5px 10px !important;
        border-radius: 5px !important;
        flex-grow: 1 !important;
    }

    .text-danger {
        font-size: 15px;
        color: #f7665e !important;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

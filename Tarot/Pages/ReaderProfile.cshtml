@page
@model Tarot.Pages.ReaderProfileModel
@{
    if(Model.currentUserId == null)
    {
        Response.Redirect("/Index");
    }
}
<div class="container" style="margin-left:15%;">
    <div class="d-flex align-content-around" style="">
        <div class="img-container">
            <img src="~/images/reader-avt.png" style="max-width:30%" />
        </div>
        <div class="infor-container" style="background-color: #38054b;color:#FCB831;padding:30px;border-radius:20px">
            <div class="d-flex">
                <div class="div1">
                    <p>Tên: @Model.name</p>
                    <p>Số Điện Thoại: @Model.phone</p>
                    <p>Mail: @Model.mail</p>
                    <form method="post">
                        <label>Link Meet:</</label>
                        <input type="text" value="@Model.linkMeet" />
                        <button class="btn" style="border: 1px solid black; color:#FCB831">Lưu</button>
                    </form>
                </div>
                <div class="div2" style="margin-left:10em">
                    <p style="font-weight:bold">Khung giờ làm việc: </p>
                    @for(int i = 0; i < Model.workingHour.Count; i++)
                    {
                        <p>Slot @(i+1): @Model.workingHour[i].StartTime - @Model.workingHour[i].EndTime</p>
                    }             
                </div>
            </div>

        </div>
    </div>
    <div class="d-flex justify-content-around my-3">
        <div class="booking-container" style="color:#FCB831;background-color:#38054b">
            <p>Số Sao đã nhận : @((int) Model.rating)</p>
            <p>Số cuộc gọi: @Model.numberOfCalls</p>
        </div>
        <div class="infor-container" style="background-color: #38054b;color:#FCB831;padding:30px;border-radius:20px">
            <h6 class="text-center">Đã coi</h6>
            @for(int i = 0; i < Model.readingHistoriesDone.Count; i++)
            {
                <p>Slot @(i + 1): @Model.readingHistoriesDone[i].Hour.StartTime - @Model.readingHistoriesDone[i].Hour.EndTime</p>
            }
        </div>
        <div class="infor-container" style="background-color: #38054b;color:#FCB831;padding:30px;border-radius:20px">
            <h6 class="text-center">Lịch khách đặt</h6>
            <div>
                <div class="d-flex">
                    @for (int i = 0; i < Model.readingHistoriesPending.Count; i++)
                    {
                        <div class="time-container" style="padding:20px;">
                            Slot @(i + 1): @Model.readingHistoriesPending[i].Hour.StartTime - @Model.readingHistoriesPending[i].Hour.EndTime
                        </div>
                        <div class="button-container">
                            <button class="btn" style="background-color:#8e05c2;border-radius:20px;color:#FCB831">Start Meet</button>
                        </div>
                        <p></p>
                    }
                    
                </div>
            </div>
        </div>

    </div>
</div>


